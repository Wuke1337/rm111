<Page x:Class="AvioRepair.Pages.RemontPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AvioRepair.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="1200"
      Title="RemontPage" Loaded="Page_Loaded">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Background="#eaeaea">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Background="#0077c2" Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="NazadBtn" Content="Назад" Margin="10,0,20,0" Height="30" Width="70" Click="NazadBtn_Click"
                        Background="LightSteelBlue" Foreground="#0077c2" FontSize="14" FontWeight="Bold"
                        VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="0"/>

                <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,10,0">
                    <Image Source="/Images/logo.png" Width="100" Height="60" Margin="0,0,10,0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <TextBlock Text="711 Авиационный ремонтный завод" FontSize="24" FontWeight="Bold" VerticalAlignment="Center" Foreground="#ffec33" HorizontalAlignment="Center"/>
                </StackPanel>

                <Grid Grid.Column="2" Width="70"/>
            </Grid>

            <Grid Grid.Row="1" Margin="10, 10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="AddBtn" Content="Добавить" Margin="0,0,10,0" Height="30" Width="150" Click="AddBtn_Click" Background="LightSteelBlue" Foreground="#0077c2" FontSize="14" FontWeight="Bold" VerticalAlignment="Center"/>
                    <Button x:Name="ReportBtn" Content="Сформировать отчет" Margin="0,0,10,0" Height="30" Width="150" Click="ReportBtn_Click" Background="LightSteelBlue" Foreground="#0077c2" FontSize="14" FontWeight="Bold" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <TextBlock Text="Поиск:" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="#0077c2" FontSize="14" FontWeight="Bold"/>
                    <TextBox x:Name="PoiskTool" TextChanged="PoiskTool_TextChanged" Width="150" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="Минимум затрат:" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="#0077c2" FontSize="14" FontWeight="Bold"/>
                    <TextBox x:Name="MINzTextBox" Width="150" VerticalAlignment="Center" Margin="0,0,10,0" TextChanged="MINzTextBox_TextChanged"/>
                    <TextBlock Text="Максимум затрат:" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="#0077c2" FontSize="14" FontWeight="Bold"/>
                    <TextBox x:Name="MAXzTextBox" Width="150" VerticalAlignment="Center" Margin="0,0,10,0" TextChanged="MAXzTextBox_TextChanged"/>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="2">
                <Grid.Background>
                    <ImageBrush ImageSource="/Images/logo2.png" Stretch="UniformToFill" Opacity="0.1"/>
                </Grid.Background>
                <StackPanel Margin="10">
                    <DataGrid x:Name="RemontDG" HorizontalContentAlignment="Stretch" AutoGenerateColumns="False" IsReadOnly="True">
                        <!-- Определяем общий стиль для заголовков столбцов -->
                        <DataGrid.Resources>
                            <Style x:Key="ColumnHeaderStyle" TargetType="DataGridColumnHeader">
                                <Setter Property="Foreground" Value="#0077c2"/>
                                <Setter Property="FontSize" Value="14"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Style>
                            <!-- Добавляем стиль для ячеек -->
                            <Style TargetType="DataGridCell">
                                <Setter Property="Foreground" Value="#0077c2"/>
                                <Setter Property="FontSize" Value="14"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Style>
                        </DataGrid.Resources>

                        <DataGrid.Columns>
                            <!-- Применяем стиль к каждой колонке -->
                            <DataGridTextColumn Header="Код ремонта" Binding="{Binding ID_Remont}" 
                                    HeaderStyle="{StaticResource ColumnHeaderStyle}"/>

                            <DataGridTextColumn Header="Название оборудования" Binding="{Binding Equipment.NameEquipment}" 
                                    HeaderStyle="{StaticResource ColumnHeaderStyle}"/>

                            <DataGridTextColumn Header="Название работы" Binding="{Binding Work.NameWork}" 
                                    HeaderStyle="{StaticResource ColumnHeaderStyle}"/>

                            <DataGridTextColumn Header="ФИО сотрудника" Binding="{Binding Sotrudniki.FIO}" 
                                    HeaderStyle="{StaticResource ColumnHeaderStyle}"/>

                            <DataGridTextColumn Header="Название цеха" Binding="{Binding Zeh.NameZeh}" 
                                    HeaderStyle="{StaticResource ColumnHeaderStyle}"/>

                            <DataGridTextColumn Header="Дата начала" Binding="{Binding StartDate,StringFormat=\{0:dd.MM.yyyy\}}" 
                                    HeaderStyle="{StaticResource ColumnHeaderStyle}"/>

                            <DataGridTextColumn Header="Дата окончания" Binding="{Binding EndDate,StringFormat=\{0:dd.MM.yyyy\}}" 
                                    HeaderStyle="{StaticResource ColumnHeaderStyle}"/>

                            <DataGridTextColumn Header="Статус" Binding="{Binding Status}" 
                                    HeaderStyle="{StaticResource ColumnHeaderStyle}"/>

                            <DataGridTextColumn Header="Затраты" Binding="{Binding Cost}" 
                                    HeaderStyle="{StaticResource ColumnHeaderStyle}"/>

                            <!-- Дополнительные колонки -->
                            <DataGridTemplateColumn HeaderStyle="{StaticResource ColumnHeaderStyle}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button x:Name="EditBtn" Content="Изменить" Margin="5" Height="30" Width="150" 
                                    Click="EditBtn_Click" Background="LightSteelBlue" Foreground="#0077c2" 
                                    FontSize="14" FontWeight="Bold" VerticalAlignment="Center"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn HeaderStyle="{StaticResource ColumnHeaderStyle}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button x:Name="DelBtn" Content="Удалить" Margin="5" Height="30" Width="150" 
                                    Click="DelBtn_Click" Background="LightSteelBlue" Foreground="#0077c2" 
                                    FontSize="14" FontWeight="Bold" VerticalAlignment="Center"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>
