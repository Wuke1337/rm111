<Page x:Class="AvioRepair.Pages.AddEdit.AddEditWorkPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AvioRepair.Pages.AddEdit"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEditWorkPage">

    <Grid Background="#eaeaea">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Background="#0077c2" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="NazadBtn" Content="Назад" Margin="10,0,20,0" Height="30" Width="70" Click="NazadBtn_Click"
                    Background="LightSteelBlue" Foreground="#0077c2" FontSize="14" FontWeight="Bold"
                    VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="0"/>

            <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,10,0">
                <Image Source="/Images/logo.png" Width="100" Height="60" Margin="0,0,10,0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <TextBlock Text="711 Авиационный ремонтный завод" FontSize="24" FontWeight="Bold" VerticalAlignment="Center" Foreground="#ffec33" HorizontalAlignment="Center"/>
            </StackPanel>

            <Grid Grid.Column="2" Width="70"/>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.Background>
                <ImageBrush ImageSource="/Images/logo2.png" Stretch="UniformToFill" Opacity="0.1"/>
            </Grid.Background>
            <Grid Margin="90,50,90,10" HorizontalAlignment="Stretch" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Название оборудования:" Grid.Row="0" Grid.Column="0" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Right" TextAlignment="Right" Foreground="#0077c2" FontSize="14" FontWeight="Bold"/>
                <ComboBox SelectedItem="{Binding Equipment}" DisplayMemberPath="NameEquipment" Name="EquipmentCmb" Grid.Row="0" Grid.Column="1" Margin="5" FontSize="14" FontWeight="Bold" Foreground="#0077c2" HorizontalAlignment="Stretch"/>

                <TextBlock Text="Название работы:" Grid.Row="1" Grid.Column="0" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Right" TextAlignment="Right" Foreground="#0077c2" FontSize="14" FontWeight="Bold"/>
                <TextBox Text="{Binding NameWork}" Grid.Row="1" Grid.Column="1" Margin="5" FontSize="14" FontWeight="Bold" Foreground="#0077c2" HorizontalAlignment="Stretch"/>

                <TextBlock Text="Тип работы:" Grid.Row="2" Grid.Column="0" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Right" TextAlignment="Right" Foreground="#0077c2" FontSize="14" FontWeight="Bold"/>
                <TextBox Text="{Binding TypeWork}" Grid.Row="2" Grid.Column="1" Margin="5" FontSize="14" FontWeight="Bold" Foreground="#0077c2" HorizontalAlignment="Stretch"/>

                <TextBlock Text="Норма времени:" Grid.Row="3" Grid.Column="0" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Right" TextAlignment="Right" Foreground="#0077c2" FontSize="14" FontWeight="Bold"/>
                <TextBox Text="{Binding NormHours}" Grid.Row="3" Grid.Column="1" Margin="5" FontSize="14" FontWeight="Bold" Foreground="#0077c2" HorizontalAlignment="Stretch"/>
  
                <Button x:Name="SaveBtn" Content="Сохранить" Margin="5" Height="30" Width="150" Grid.Row="7" Grid.Column="1" Click="SaveBtn_Click" Background="LightSteelBlue" Foreground="#0077c2" FontSize="14" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left"/>
            </Grid>
        </Grid>
    </Grid>
</Page>
