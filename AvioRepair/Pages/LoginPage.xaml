<Page x:Class="AvioRepair.Pages.Osnova.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AvioRepair.Pages.Osnova"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid Background="#eaeaea">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Background="#0077c2" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>


            <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,10,0">
                <Image Source="/Images/logo.png" Width="100" Height="60" Margin="0,0,10,0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <TextBlock Text="711 Авиационный ремонтный завод" FontSize="24" FontWeight="Bold" VerticalAlignment="Center" Foreground="#ffec33" HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.Background>
                <ImageBrush ImageSource="/Images/logo2.png" Stretch="UniformToFill" Opacity="0.1"/>
            </Grid.Background>
            <Grid Margin="180,0,180,30" HorizontalAlignment="Stretch" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Авторизация" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" 
                           HorizontalAlignment="Center" FontSize="36" FontWeight="Bold" 
                           Foreground="#0077c2" Margin="0,0,0,40"/>

                <TextBlock Text="Логин:" Grid.Row="1" Grid.Column="0" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left" TextAlignment="Right" Foreground="#0077c2" FontSize="20" FontWeight="Bold"/>
                <TextBox x:Name="LoginBox" Text="{Binding Login}" Grid.Row="1" Grid.Column="1" Margin="5" FontSize="20" FontWeight="Bold" Foreground="#0077c2" HorizontalAlignment="Stretch"/>

                <TextBlock Text="Пароль:" Grid.Row="2" Grid.Column="0" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left" TextAlignment="Right" Foreground="#0077c2" FontSize="20" FontWeight="Bold"/>
                <PasswordBox x:Name="PasswordBox" Grid.Row="2" Grid.Column="1" Margin="5" FontSize="20" FontWeight="Bold" Foreground="#0077c2" HorizontalAlignment="Stretch"/>

                <!-- Блок для отображения ошибки -->
                <TextBlock x:Name="ErrorText" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                           Text="Неверный логин или пароль!" 
                           Foreground="Red" FontSize="16" FontWeight="Bold"
                           HorizontalAlignment="Center" Margin="0,10" Visibility="Collapsed"/>

                <Button x:Name="VhodBtn" Content="Вход" Margin="5" Height="40" Width="150" Grid.Row="5" Grid.Column="1" Click="VhodBtn_Click" Background="LightSteelBlue" Foreground="#0077c2" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left"/>
            </Grid>
        </Grid>
    </Grid>
</Page>