<Page x:Class="AvioRepair.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AvioRepair.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="#0077c2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <Button x:Name="VihodBtn" Content="Выйти" Margin="10,0,20,0" Height="30" Width="70" Click="VihodBtn_Click"
                    Background="LightSteelBlue" Foreground="#0077c2" FontSize="14" FontWeight="Bold"
                    VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="0"/>
            
            <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,10,0">
                <Image Source="/Images/logo.png" Width="100" Height="60" Margin="0,0,10,0" VerticalAlignment="Center"/>
                <TextBlock Text="711 Авиационный ремонтный завод" FontSize="24" FontWeight="Bold" VerticalAlignment="Center" Foreground="#ffec33"/>
            </StackPanel>

            <Grid Grid.Column="2" Width="70"/>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.Background>
                <ImageBrush ImageSource="/Images/logo2.png" Stretch="UniformToFill" Opacity="0.1"/>
            </Grid.Background>
            <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="60"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="250"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="UsersBtn" Click="UsersBtn_Click" Grid.Row="0" Grid.Column="0" Content="Администрирование" Margin="5" Background="#0077c2" Foreground="White" FontSize="16" FontWeight="Bold"/>
                <Button x:Name="StoreRegistorBtn" Click="StoreRegistorBtn_Click" Grid.Row="0" Grid.Column="1" Content="Журнал регистрации" Margin="5" Background="#0077c2" Foreground="White" FontSize="16" FontWeight="Bold" />
                <Button x:Name="ZehBtn" Click="ZehBtn_Click" Grid.Row="1" Grid.Column="0" Content="Цехи" Margin="5" Background="#0077c2" Foreground="White" FontSize="16" FontWeight="Bold" />
                <Button x:Name="SotrudnikiBtn" Click="SotrudnikiBtn_Click" Grid.Row="1" Grid.Column="1" Content="Сотрудники" Margin="5" Background="#0077c2" Foreground="White" FontSize="16" FontWeight="Bold" />
                <Button x:Name="EquipmentBtn" Click="EquipmentBtn_Click" Grid.Row="2" Grid.Column="0" Content="Оборудование" Margin="5" Background="#0077c2" Foreground="White" FontSize="16" FontWeight="Bold" />
                <Button x:Name="WorkBtn" Click="WorkBtn_Click" Grid.Row="2" Grid.Column="1" Content="Виды работ" Margin="5" Background="#0077c2" Foreground="White" FontSize="16" FontWeight="Bold"/>
                <Button x:Name="RemontBtn" Click="RemontBtn_Click" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Content="Ремонты" Margin="5" Background="#0077c2" Foreground="White" FontSize="16" FontWeight="Bold"/>
            </Grid>
        </Grid>
    </Grid>
</Page>
